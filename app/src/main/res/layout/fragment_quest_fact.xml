<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/quest_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/quest_facts"
            android:textSize="@dimen/sp_22"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/sp_quest_select_category"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp32"
            android:layout_margin="@dimen/dp60"
            android:background="@drawable/spinner_outline_shape"
            android:spinnerMode="dialog" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <EditText
                android:id="@+id/input_digit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_round_edit_text"
                android:drawablePadding="12dp"
                android:drawableStart="@drawable/ic_number"
                android:ems="9"
                android:hint="@string/input"
                android:inputType="number"
                android:paddingBottom="@dimen/dp4"
                android:paddingLeft="@dimen/dp8"
                android:paddingStart="@dimen/dp8"
                android:singleLine="true"
                android:visibility="gone" />

            <EditText
                android:id="@+id/input_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_round_edit_text"
                android:clickable="true"
                android:drawablePadding="12dp"
                android:drawableStart="@drawable/ic_calendar"
                android:editable="false"
                android:ems="9"
                android:hint="@string/inputDate"
                android:inputType="date"
                android:paddingBottom="@dimen/dp4"
                android:paddingLeft="@dimen/dp8"
                android:paddingStart="@dimen/dp8"
                android:singleLine="true"
                android:visibility="gone" />

        </RelativeLayout>


        <android.support.v7.widget.AppCompatButton
            android:id="@+id/bt_fetch_quest_fact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp8"
            android:layout_marginTop="@dimen/dp60"
            android:background="@drawable/button"
            android:ems="12"
            android:text="@string/get_specific" />

    </LinearLayout>


</android.support.v4.widget.NestedScrollView>

